<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<property name="HOME_AUDIT" value="../logs/audit.log"/>
	<property name="HOME_LOGIN" value="../logs/login.log"/>

  	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    	<!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    	<encoder>
      		<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
    	</encoder>
  	</appender>

  	<appender name="LOGIN_LOG" class="ch.qos.logback.core.FileAppender">
    	<!-- use the previously created timestamp to create a uniquely
         named log file -->

		<filter class="gov.nyc.nyco.intellimatch.filters.LoginLoggerFilter" />
    	<file>${HOME_LOGIN}</file>
    	<encoder>
      		<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
    	</encoder>
  	</appender>
  
    <appender name="AUDIT_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HOME_AUDIT}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>../logs/archived/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- each archived file, size max 10MB -->
            <maxFileSize>10MB</maxFileSize>
            <!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
            <totalSizeCap>20GB</totalSizeCap>
            <!-- 60 days to keep -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
   
  
  <!-- Login info  -->
  <logger name="gov.nyc.nyco.intellimatch" level="trace" additivity="false">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="LOGIN_LOG" />
  </logger>
  
  <!-- Audit info  -->
  <logger name="gov.nyc.nyco.intellimatch" level="debug" additivity="false">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="LOGIN_LOG" />
    <appender-ref ref="AUDIT_LOG" />

  </logger>

  <root level="error">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="LOGIN_LOG" />
    <appender-ref ref="AUDIT_LOG" />
  </root>
  
  
</configuration>

